<UserControl x:Class="WPF_MySQL_Test.UCForTemplateTest1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MySQL_Test"
             mc:Ignorable="d" 
             >
    <Grid Margin="4">
        <Grid Margin="4">
            <StackPanel x:Name="SP0" Orientation="Horizontal">
                <Image x:Name="IMG_Logo" Width="67" Height="78" Margin="4"></Image>
                <StackPanel x:Name="SP1" Margin="8">
                    <TextBlock x:Name="TBK_Name" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="TBK_Year" FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
